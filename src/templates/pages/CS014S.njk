{% extends "layouts/base.njk" %}
{% set title = "공지사항" %}
{% block content %}
  {% include "components/sideNavCustomer.njk" %}
  <div class="content">
    <div class="page-title --left">
      <h3>공지사항</h3>
    </div>
    <section class="content-box">
      <div class="util-wrap --right">
        <div class="form-field">
          <div class="form-option util-option">
            <div class="form-wrap select">
              <select class="btn-select">
                <option>전체</option>
              </select>
            </div>
            <input type="text" class="--basic" placeholder="검색어를 입력해보세요."/>
            <button type="button" class="btn-outline --small">
              <span>조회</span>
            </button>
          </div>
        </div>
      </div>
      <div class="table-list">
        <div class="list-item-wrap --header">
          <div class="list-item">
            <div class="item --number">
              <p>번호</p>
            </div>
            <div class="item --title">
              <p>제목</p>
            </div>
            <div class="item --date">
              <p>등록일</p>
            </div>
            <div class="item --count-num">
              <p>조회</p>
            </div>
          </div>
        </div>
        <!-- // list header -->
        <div class="list-item-wrap --body">
          <div class="list-item">
            <div class="item --number" data-label="번호">
              <div class="item-inner">
                <p>1</p>
              </div>
            </div>
            <div class="item --title" data-label="제목">
              <p class="title">
                <a href="">공지사항 제목이 나타나는 칸입니다. 고객이 작성한 제목이 길어지는 경우 생략되어 나타나게 됩니다.</a>
              </p>
            </div>
            <div class="item --date" data-label="등록일">
              <div class="item-inner">
                <p class="date">
                  <span>25.00.00</span>
                </p>
              </div>
            </div>
            <div class="item --count-num" data-label="조회">
              <div class="item-inner">
                <p>0</p>
              </div>
            </div>
          </div>
        </div>
        <!-- // list body -->
      </section>
      <!-- pagination -->
      <section class="content-box">
        <div class="pagination">
          <ul class="item-wrap">
            <li class="item prev">
              <a href="">이전</a>
            </li>
            <li class="item --active">
              <a href="">1</a>
            </li>
            <li class="item">
              <a href="">2</a>
            </li>
            <li class="item">
              <span>&middot;&nbsp;&middot;&nbsp;&middot;</span>
            </li>
            <li class="item next disabled">
              <a href="">다음</a>
            </li>
          </ul>
        </div>
      </section>
    </div>
  {% endblock %}