{% extends "layouts/base.njk" %}
{% set title = "이용후기 작성" %}
{% block content %}
  <div class="modal --full --large">
    <div class="modal-wrap">
      <div class="modal-header">
        <h5 class="modal-title">이용후기 작성</h5>
      </div>
      <div class="modal-container">
        <div class="product-order">
          <div class="product-option item">
            <div class="product-wrap --order-info">
              <div class="product-inner-item">
                <div class="product-img">
                  <img src="/resources/fe/img/product/A001_thum_1.jpg" alt="상품이미지"/>
                </div>
                <div class="product-info">
                  <p class="product-name">상품명</p>
                  <div class="product-text">
                    <p class="text">기본정보가 노출되는 줄입니다.</p>
                    <p class="text">제목 및 내용이 노출되는 줄입니다.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div
            class="product-option">
            <!-- 평점 -->
            <div class="rating-wrap --large">
              <span class="title">평점</span>
              <fieldset class="rating-container input">
                <input type="radio" id="rating5" name="rating" class="ipt-rating" value="5"/>
                <label for="rating5" title="5점"></label>
                <input type="radio" id="rating4" name="rating" class="ipt-rating" value="4"/>
                <label for="rating4" title="4점"></label>
                <input type="radio" id="rating3" name="rating" class="ipt-rating" value="3"/>
                <label for="rating3" title="3점"></label>
                <input type="radio" id="rating2" name="rating" class="ipt-rating" value="2"/>
                <label for="rating2" title="2점"></label>
                <input type="radio" id="rating1" name="rating" class="ipt-rating" value="1"/>
                <label for="rating1" title="1점"></label>
              </fieldset>
            </div>
            <!-- 글 작성 -->
            <div class="form-field textarea">
              <div class="form-wrap">
                <textarea id="textarea" placeholder="후기를 자유롭게 작성해주세요. (최소 20자 이상 입력)"></textarea>
              </div>
              <div class="textarea-bottom">
                <div class="count">
                  <em>1</em>/<span>500</span>
                </div>
                <p class="guide-sub --small">
                  후기 작성은 최소 20자 이상 작성해야만 등록 가능합니다.
                </p>
              </div>
            </div>
            <!-- 이미지 첨부 -->
            <dl class="column-item">
              <dt>파일첨부</dt>
              <dd>
                <!-- 파일 첨부 전 :파일 첨부 -->
                <div class="form-field">
                  <div class="form-wrap file">
                    <label class="btn-primary --small">
                      <input type="file"/>
                      <span>파일첨부</span>
                    </label>
                    <span class="guide-sub">선택한 파일이 없습니다.</span>
                    <!-- // 파일 선택 후 : 안내문구 > 파일명으로 텍스트 대치 -->
                    <!-- 파일 선택 후 : 삭제 버튼 사용 -->
                    <button type="button" class="btn-del">
                      <i class="delete">삭제</i>
                    </button>
                    <!-- // 파일 선택 후 : 삭제 버튼 사용 -->
                    <button type="button" class="btn-util-add">
                      <i class="icon-plus"></i>
                      <span>추가</span>
                    </button>
                  </div>
                  <!-- 파일첨부 추가 -->
                  <div class="form-wrap file">
                    <label class="btn-primary --small">
                      <input type="file">
                      <span>파일첨부</span>
                    </label>
                    <span class="guide-sub">선택한 파일이 없습니다.</span>
                    <!-- // 파일 선택 후 : 안내문구 > 파일명으로 텍스트 대치 -->
                    <!-- 파일 선택 후 : 삭제 버튼 사용 -->
                    <button type="button" class="btn-del">
                      <i class="delete">삭제</i>
                    </button>
                    <!-- // 파일 선택 후 : 삭제 버튼 사용 -->
                    <button type="button" class="btn-util-del">
                      <i class="icon-minus"></i>
                      <span>삭제</span>
                    </button>
                  </div>
                </div>
                <!-- 파일 첨부 후 :첨부 파일 삭제 -->
                <div class="btn-wrap --replace">
                  <button type="button" class="btn-outline --small">
                    <span>이미지 전체삭제</span>
                  </button>
                </div>
              </dd>
            </dl>
            <!-- 첨부 이미지 -->
            <div class="product-review-photo --write">
              <ul>
                <li>
                  <p class="item">
                    <img src="/resources/fe/img/product/A001_thum_2.jpg" alt="포토리뷰 이미지"/>
                  <!-- <a href="/" class="btn-del --small"> <i>삭제</i> </a> // 전체 삭제로 변경 -->
                    <!-- <strong class="badge">대표</strong> // 대표이미지 표기 안함 -->
                  </p>
                </li>
                <li>
                  <p class="item">
                    <img
                    src="/resources/fe/img/product/A001_thum_2.jpg" alt="포토리뷰 이미지"/>
                  <!-- <a href="/" class="btn-del --small"> <i>삭제</i> </a> // 전체 삭제로 변경 -->
                  </p>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="btn-wrap confirm">
          <button type="button" class="btn-outline --medium">
            <span>취소</span>
          </button>
          <button type="button" class="btn-primary --medium">
            <span>등록</span>
          </button>
        </div>
      </div>
      <div class="btn-wrap close">
        <button type="button" class="btn-close">
          <i>닫기</i>
        </button>
      </div>
    </div>
  </div>
{% endblock %}