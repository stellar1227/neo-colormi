{% extends "layouts/base.njk" %}
{% set title = "loadingSpinner" %}
{% block content %}
  <!-- 일부 적용 시 :loading-box -->
  <div class="loading-box">
    <div style="width: 300px; height: 100px;"></div>
    <!-- loading : 실행 시 loading-item에 --active 추가 -->
    <div class="loading-item --active">
      <div class="loadingSpinner spinner"></div>
    </div>
  </div>
  <!-- 전체 적용 시 -->
  <!-- loading : 실행 시 loading-item에 --active 추가 -->
  <div class="loading-item --active">
    <div class="loadingSpinner spinner"></div>
  </div>
{% endblock %}